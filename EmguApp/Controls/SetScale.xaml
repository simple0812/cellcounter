<Window x:Class="EmguApp.Controls.SetScale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmguApp.Controls"
        mc:Ignorable="d"
        Title="设置长度比例" Height="100" Width="300">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" Margin="0 10" HorizontalAlignment="Center">
            <TextBlock Text="实际长度：" VerticalAlignment="Center"></TextBlock>
            <TextBox x:Name="txtLen" Text="" Width="100" VerticalContentAlignment="Center"></TextBox>
            <ComboBox x:Name="cb">
                <ComboBoxItem IsSelected="True" Width="40">cm</ComboBoxItem>
                <ComboBoxItem>mm</ComboBoxItem>
                <ComboBoxItem>μm</ComboBoxItem>
                <ComboBoxItem>nm</ComboBoxItem>
                <ComboBoxItem>pm</ComboBoxItem>
                <ComboBoxItem>fm</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <Button Content="确定" Width="60" HorizontalAlignment="Right" Margin="0 0 43 0" Click="ButtonBase_OnClick"></Button>
    </StackPanel>
    
</Window>
